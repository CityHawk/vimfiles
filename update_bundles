#!/usr/bin/env ruby

git_bundles = [
    "http://github.com/scrooloose/nerdtree.git",
    "http://github.com/tpope/vim-fugitive.git",
    "http://github.com/plasticboy/vim-markdown.git",
    "http://github.com/tpope/vim-surround.git",
    "http://github.com/vim-ruby/vim-ruby.git",
    "http://github.com/t9md/vim-chef.git",
    "http://github.com/dougireton/vim-chef.git",
    "http://github.com/bling/vim-airline.git",
    "http://github.com/taq/vim-git-branch-info",
    "http://github.com/SirVer/ultisnips.git",
    "http://github.com/tomtom/tcomment_vim.git",
    "http://github.com/tpope/vim-endwise.git",
    "http://github.com/scrooloose/syntastic.git",
    "http://github.com/tpope/vim-sensible.git",
    "http://github.com/kien/rainbow_parentheses.vim.git",
    "http://github.com/szw/vim-ctrlspace.git",
    # "http://github.com/wincent/command-t.git",
    "http://github.com/tomasr/molokai",
    # "http://github.com/myusuf3/numbers.vim.git",
    "http://github.com/ervandew/supertab",
    "http://github.com/airblade/vim-gitgutter.git",
    "http://github.com/Raimondi/delimitMate.git",
    # "http://github.com/jistr/vim-nerdtree-tabs.git",
    "http://github.com/ekalinin/Dockerfile.vim.git",
    "http://github.com/vim-pandoc/vim-pandoc.git",
    "http://github.com/rodjek/vim-puppet.git",
    "http://github.com/godlygeek/tabular.git",
    "http://github.com/honza/vim-snippets.git",
    "http://github.com/mtth/scratch.vim.git",
    "http://github.com/elzr/vim-json.git",
    "http://github.com/markcornick/vim-hashicorp-tools.git"
]

vim_org_scripts = [
    ["IndexedSearch", "7062",  "plugin"]
    # ["closetag", "13", "scripts"]
]

require 'fileutils'
require 'open-uri'

bundles_dir = File.join(File.dirname(__FILE__), "bundle")

FileUtils.mkdir_p(bundles_dir)
FileUtils.cd(bundles_dir)

puts "trashing everything (lookout!)"
Dir["*"].each {|d| FileUtils.rm_rf d }

git_bundles.each do |url|
    dir = url.split('/').last.sub(/\.git$/, '')
    if url == "http://github.com/dougireton/vim-chef.git"
        dir = "vim-chef-ft"
    end
    puts "unpacking #{url} into #{dir}"
    `git clone #{url} #{dir}`
    FileUtils.rm_rf(File.join(dir, ".git"))
end

vim_org_scripts.each do |name, script_id, script_type|
    puts "downloading #{name}"
    local_file = File.join(name, script_type, "#{name}.vim")
    FileUtils.mkdir_p(File.dirname(local_file))
    File.open(local_file, "w") do |file|
        file << open("http://www.vim.org/scripts/download_script.php?src_id=#{script_id}").read
    end
end
